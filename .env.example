# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here # Generate with: openssl rand -base64 32

# Application URL
APP_URL=http://localhost:3000

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/unified_customer_dashboard

# Authorized Emails (comma-separated)
AUTHORIZED_EMAILS=user1@example.com,user2@example.com

# HubSpot API
HUBSPOT_API_KEY=your-hubspot-api-key
HUBSPOT_BASE_URL=https://api.hubapi.com

# Dwolla API
DWOLLA_CLIENT_ID=your-dwolla-client-id
DWOLLA_CLIENT_SECRET=your-dwolla-client-secret
DWOLLA_ENVIRONMENT=sandbox # or production
DWOLLA_BASE_URL=https://api-sandbox.dwolla.com # or https://api.dwolla.com for production

# Demo Mode (optional)
DEMO_MODE=false

# PDF Export Configuration
PDF_COMPANY_LOGO_URL=https://example.com/logo.png

# Node Environment
NODE_ENV=development